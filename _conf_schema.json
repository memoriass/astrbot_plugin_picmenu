{
  "theme": {
    "description": "界面主题",
    "type": "string",
    "hint": "选择帮助界面的主题风格",
    "options": ["light", "dark", "auto"],
    "default": "light"
  },
  "show_hidden_plugins": {
    "description": "显示隐藏插件",
    "type": "bool",
    "hint": "是否在帮助菜单中显示隐藏的插件",
    "default": false
  },
  "admin_only_hidden": {
    "description": "仅管理员查看隐藏内容",
    "type": "bool",
    "hint": "隐藏插件是否仅管理员可见",
    "default": true
  },
  "admin_users": {
    "description": "管理员用户ID列表",
    "type": "string",
    "hint": "有权限查看隐藏内容的用户ID，多个用逗号分隔",
    "default": ""
  },
  "fuzzy_search_threshold": {
    "description": "模糊搜索阈值",
    "type": "int",
    "hint": "模糊搜索的匹配阈值(0-100)，越高越严格",
    "default": 60
  },
  "max_plugins_per_page": {
    "description": "每页最大插件数",
    "type": "int",
    "hint": "主页面每页显示的最大插件数量",
    "default": 12
  },
  "image_width": {
    "description": "图片宽度",
    "type": "int",
    "hint": "生成图片的宽度(像素)",
    "default": 800
  },
  "font_size": {
    "description": "字体大小",
    "type": "int",
    "hint": "帮助界面的基础字体大小",
    "default": 16
  },
  "enable_pinyin_search": {
    "description": "启用拼音搜索",
    "type": "bool",
    "hint": "是否支持拼音搜索插件名称",
    "default": true
  },
  "cache_enabled": {
    "description": "启用缓存",
    "type": "bool",
    "hint": "是否缓存生成的帮助图片",
    "default": true
  },
  "cache_expire_minutes": {
    "description": "缓存过期时间(分钟)",
    "type": "int",
    "hint": "帮助图片缓存的过期时间",
    "default": 30
  }
}
